.operation
  height: 100%;
  padding 0 20px;
  line-height 60px;
  box-sizing border-box;
  position relative;

  .enter
   text-align center;

  .subject
    display inline-block;
    height: 33px;
    line-height 33px;
    border 1px solid #c1c0c0;
    border-radius 8px;
    padding 0 15px;
    font-size 14px;
    box-sizing border-box;
    cursor pointer;
    color #333333;
    .el-icon-s-unfold,/deep/.el-icon-s-unfold
      margin-right 3px;
      color #333333;
    &:hover
      color rgba(45,181,93, 1);
      border 1px solid rgba(45,181,93, 1);
      .el-icon-s-unfold,/deep/.el-icon-s-unfold
        margin-right 3px;
        color rgba(45,181,93, 1);

  .total
    margin 0 20px;



.el-dropdown-menu,/deep/.el-dropdown-menu
  min-width 60px;
  height 200px;
  overflow-y auto;
  padding: 0;
  .el-dropdown-menu__item
    text-align center;
    line-height 30px;
    border-top 1px solid #EEEEEE;
    &:first-child
      border: none;



.topicTitle
  font-size 14px;
  line-height 34px;
  height: 34px;

  .el-icon-caret-left,/deep/.el-icon-caret-left,.el-icon-caret-right,/deep/.el-icon-caret-right
    display inline-block;
    font-size 34px;
    cursor pointer;

  .el-select,/deep/.el-select
    height: 34px;
  /deep/.el-input,/deep/.el-button
    height: 34px;
    line-height 34px;
    padding 0 20px;
    .el-input__inner
      height: 34px;
      line-height 34px;

.topicListBox
  height calc(100% - 34px);
  box-sizing border-box;
  position relative;
  overflow-y auto;
  padding 20px 0;
  .topicList
    height: 40px;
    line-height 40px;
    position relative
    color darkcyan;
    box-sizing border-box;
    padding 0 20px;
    cursor pointer

    span
      position absolute;
      right: 20px;
      &.color1
        color rgba(90,183,38,1);
      &.color2
        color rgba(255,161,25,1);
      &.color3
        color rgba(239,71,67,1);

