.display, .display/deep/.el-row
  width: 100%;
  position relative;
  display flex;
  overflow hidden;
  box-sizing border-box;
  flex-direction column;
  height: 100%;

  .flex
    flex 1;
    height calc(100% - 80px);
    box-sizing border-box;
    padding 0 20px;

  .footer
    height: 60px;
    background: #FFFFFF;
    box-sizing border-box;
    border-top 1px solid red;

  .autoScroll
    //overflow auto;
    height: 100%;
